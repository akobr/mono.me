{
  "repo": {
    "name": "mono.me",
    "description": "My personal mono-repository with most of my projects.",
    "prefix": "42",
    "features": [ "git-version", "packages", "tests-xunit", "tests-nunit", "documentation" ],
    "srcSiblings": [ "docs", ".azure/pipelines" ],
    "scripts": {
      /* add any global scripts here */
      "hello": "echo 'Hello world!'",
      "ls": "dir"
    },
    "folders": {
      "source": "src",
      "documentation": "docs"
    }
  },
  "release": {
    "branches": [
      "^refs/heads/main$"
    ],
    "changes": {
      "major": [ /* custom major commit message types */ ],
      "minor": [ "feat" ],
      "patch": [ "fix", "perf", "refactor" ],
      "harmless": [ "style", "test", "build", "ci", "docs", "chore" ]
    },
    "createReleaseBranch": true
  },
  "types": {
    /* add custom types of items here (workstead, project) */
    "dotnet-project": {
      "custom": {
        "filePattern": "*.*?proj",
        "useFullProjectNames": false
      },
      "scripts": {
        "build": "dotnet build src",
        "clean": "dotnet clean src",
        "pack": "dotnet pack src",
        "restore": "dotnet restore src",
        "run": "dotnet run src",
        "test": "dotnet test test"
      }
    },
    "nodejs-project": {
      "scripts": {
        /* add any project related scripts here */
      }
    }
  },
  "items": [
    /* your worksteads/projects configuration is going to be here */
    {
      "path": "src/Monorepo",
      "name": "Monorepo",
      "description": "Tooling around mono-repository."
    },
    {
      "path": "src/Texo",
      "name": "Texo",
      "description": "Powerful text base UI framework."
    },
    {
      "path": "src/StrongBeaver",
      "name": "StrongBeaver",
      "description": "Universal layered application toolkit for .NET platform."
    },
    {
      "path": "src/Widgetised.Blazor",
      "name": "Widgetised.Blazor"
    },
    {
      "path": "src/Cetris",
      "name": "Cetris",
      "description": "The intersection of the legendary game Tetris + Command line = Cetris."
    },
    {
      "path": "src/Monorepo/Dotnet.Project.Templates",
      "type": "dotnet-project",
      "dependencies": [
        "src/Cetris/Cetris.Game"
      ],
      "exclude": [
        "release",
        "version"
      ]
    }
  ]
}
